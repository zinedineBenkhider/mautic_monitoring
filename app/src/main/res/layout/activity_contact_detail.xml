<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
   >

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <include layout="@layout/toolbar"></include>
        <ProgressBar
            android:id="@+id/contact_detail_progress_bar"
            style="?android:attr/progressBarStyle"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_gravity="center"
            android:visibility="visible"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:id="@+id/content_detail_contact"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/contact_icon_detail_contact"
                        android:src="@drawable/ic_person"

                        android:layout_gravity="center"
                        android:layout_marginTop="25dp"
                        >
                    </ImageView>
                    <TextView
                        android:id="@+id/first_last_name_detail_contact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center"
                        android:textSize="22dp"
                        android:textStyle="bold"
                        tools:text="Zinedine Benkhider"
                        />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatImageButton
                            android:id="@+id/call_btn_contact_detail"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:layout_marginRight="15dp"
                            android:src="@drawable/ic_call_24">

                        </androidx.appcompat.widget.AppCompatImageButton>
                        <androidx.appcompat.widget.AppCompatImageButton
                            android:id="@+id/send_msg_btn_contact_detail"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginRight="15dp"
                            android:background="@color/white"
                            android:src="@drawable/ic_message">
                        </androidx.appcompat.widget.AppCompatImageButton>
                        <androidx.appcompat.widget.AppCompatImageButton
                            android:id="@+id/send_email_btn_contact_detail"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:src="@drawable/ic_email">
                        </androidx.appcompat.widget.AppCompatImageButton>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/text_detail"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:textSize="20dp"
                android:text="@string/detail_lab"
                />
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/company_label_img_detail_contact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="16dp"
                        android:src="@drawable/ic_business"
                        />
                    <TextView
                        android:id="@+id/company_label_detail_contact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="5dp"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:textColor="@color/color_labels"
                        android:text="@string/company_label"
                        />
                    <TextView
                        android:id="@+id/company_detail_contact"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right
"                       android:layout_marginRight="16dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="16dp"
                        android:textSize="16dp"
                        tools:text="BNP paribas"
                        />
                </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/location_label_img_detail_contact"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:src="@drawable/ic_location"
                            />
                        <TextView
                            android:id="@+id/location_label_detail_contact"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:textColor="@color/color_labels"
                            android:text="@string/location_label"
                            />
                        <TextView
                            android:id="@+id/location_detail_contact"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:gravity="right
"                           android:layout_marginRight="16dp"
                            android:layout_marginLeft="16dp"
                            android:textSize="16dp"
                            tools:text="Algerie"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/date_added_label_detail_contact"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="16dp"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:textColor="@color/color_labels"
                            android:text="@string/date_added_label"
                            />
                        <TextView
                            android:id="@+id/date_added_detail_contact"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="16dp"
                            android:gravity="right
"                           android:layout_marginRight="16dp"
                            android:textSize="16dp"
                            tools:text="20/10/2020"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/first_active_label_detail_contact"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="16dp"
                            android:textStyle="bold"
                            android:textColor="@color/color_labels"
                            android:textSize="16dp"
                            android:text="@string/first_active_label"
                            />
                        <TextView
                            android:id="@+id/first_active_detail_contact"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:gravity="right"
                            android:textSize="16dp"
                            tools:text="05/11/2020"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/last_active_label_detail_contact"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="16dp"
                            android:textStyle="bold"
                            android:textColor="@color/color_labels"
                            android:textSize="16dp"
                            android:text="@string/last_active_label"
                            />
                        <TextView
                            android:id="@+id/last_active_detail_contact"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:gravity="right"
                            android:textSize="16dp"
                            tools:text="05/11/2020"
                            />
                    </LinearLayout>
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginBottom="5dp"
                       android:orientation="horizontal">
                       <TextView
                           android:id="@+id/nb_points_label_detail_contact"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginTop="10dp"
                           android:layout_marginLeft="16dp"
                           android:textSize="16dp"
                           android:textStyle="bold"
                           android:textColor="@color/color_labels"
                           android:text="@string/points_label"
                           />
                       <TextView
                           android:id="@+id/nb_points_detail_contact"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:layout_marginTop="10dp"
                           android:layout_marginLeft="16dp"
                           android:textSize="16dp"
                           android:layout_marginRight="16dp"
                           android:gravity="right"
                           tools:text="20"
                           />
                   </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>