<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <include layout="@layout/toolbar"></include>
        <ProgressBar
            android:id="@+id/email_detail_progress_bar"
            style="?android:attr/progressBarStyle"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_gravity="center"
            android:visibility="visible"
            />
        <ScrollView

            android:layout_width="match_parent"
            android:layout_height="match_parent" >
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:id="@+id/content_email_detail"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/name_email_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:textSize="22dp"
                tools:text="Limited Offer"
                />

            <TextView
                android:id="@+id/text_detail"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                android:textSize="20dp"
                android:text="DETAIL"
                />
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginBottom="15dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/date_added_label_email_detail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="16dp"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:textColor="@color/color_labels"
                            android:text="@string/date_added_label"
                            />
                        <TextView
                            android:id="@+id/date_added_email_detail"
                            android:layout_width="match_parent"
                            android:gravity="right"
                            android:layout_marginRight="16dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="16dp"
                            android:textSize="16dp"
                            tools:text="20/10/2020"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/published_up_label_email_detail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="16dp"
                            android:textColor="@color/color_labels"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:text="@string/published_up_label"
                            />
                        <TextView
                            android:id="@+id/published_up_email_detail"
                            android:layout_width="match_parent"
                            android:gravity="right"
                            android:layout_marginRight="16dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="16dp"
                            android:textSize="16dp"
                            tools:text="22/10/2020"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/subject_label_email_detail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="10dp"
                            android:text="@string/subject_label"
                            android:textColor="@color/color_labels"
                            android:textSize="16dp"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/subject_email_detail"
                            android:layout_width="match_parent"
                            android:gravity="right"
                            android:layout_marginRight="16dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="16dp"
                            android:textSize="16dp"
                            tools:text="Promotion"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/sent_count_label_email_detail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="16dp"
                            android:textStyle="bold"
                            android:textColor="@color/color_labels"
                            android:textSize="16dp"
                            android:text="@string/sent_count_label"
                            />
                        <TextView
                            android:id="@+id/sent_count_email_detail"
                            android:layout_width="match_parent"
                            android:gravity="right"
                            android:layout_marginRight="16dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="16dp"
                            android:textSize="16dp"
                            tools:text="20"
                            />
                    </LinearLayout>



                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="20dp"
                android:text="@string/performance_label"
                android:layout_marginLeft="16dp"
                >

            </TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="10dp"
                android:id="@+id/pie_chart_layout_detail_email"
                android:gravity="center_horizontal">
                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/piechart_sent_email_detail"
                    android:layout_width="250dp"
                    android:layout_height="200dp"
                    android:layout_margin="5dp"
                    />
                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/piechart_unsubscribes_email_detail"
                    android:layout_width="250dp"
                    android:layout_height="200dp"
                    android:layout_margin="5dp"/>
            </LinearLayout>

        </LinearLayout>
        </ScrollView>

    </LinearLayout>


</LinearLayout>